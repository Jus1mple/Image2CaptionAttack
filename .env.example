# ==========================================
# API配置
# ==========================================
# 阿里云DashScope API密钥（用于Qwen模型）
DASHSCOPE_API_KEY=sk-your-api-key-here

# ==========================================
# 数据集路径配置
# ==========================================
# COCO2017数据集
COCO_TRAIN_DIR=./datasets/COCO2017/train2017
COCO_VAL_DIR=./datasets/COCO2017/val2017
COCO_TRAIN_ANNOTATION=./datasets/COCO2017/annotations/instances_train2017.json
COCO_VAL_ANNOTATION=./datasets/COCO2017/annotations/instances_val2017.json
COCO_TRAIN_CAPTION=./datasets/COCO2017/annotations/captions_train2017.json
COCO_VAL_CAPTION=./datasets/COCO2017/annotations/captions_val2017.json

# Flickr8K数据集（可选）
FLICKR8K_DIR=./datasets/flickr8k
FLICKR8K_TRAIN_DIR=./datasets/flickr8k/flickr8k_train
FLICKR8K_VAL_DIR=./datasets/flickr8k/flickr8k_val
FLICKR8K_TEST_DIR=./datasets/flickr8k/flickr8k_test

# ImageNet数据集（可选）
IMAGENET_PARQUET_DIR=./datasets/imagenet-1k-256x256/data

# ==========================================
# MobileNet预训练模型路径
# ==========================================
MOBILENET_DIR=./pretrained_models/mobilenet
MOBILENET_V2_PATH=./pretrained_models/mobilenet/mobilenetv2/pretrained/mobilenetv2-c5e733a8.pth
MOBILENET_V3_LARGE_PATH=./pretrained_models/mobilenet/mobilenetv3/pretrained/mobilenetv3-large-1cd25616.pth
MOBILENET_V3_SMALL_PATH=./pretrained_models/mobilenet/mobilenetv3/pretrained/mobilenetv3-small-55df8e1f.pth

# ==========================================
# 输出路径配置
# ==========================================
# 日志目录
LOG_DIR=./logs

# 模型保存路径
MODEL_SAVE_PATH=./saved_models/QformerOPTModel

# 评估结果保存路径
EVAL_SAVE_PATH=./results

# ==========================================
# 训练配置（可选，可通过命令行参数覆盖）
# ==========================================
# CUDA设备
# CUDA_VISIBLE_DEVICES=0

# 批次大小
# BATCH_SIZE=8

# 学习率
# LEARNING_RATE=1e-5
